<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @post.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @post.content %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Back", posts_path, :class => 'btn'  %>
  <%= link_to "Edit Post", edit_post_path(@post), :class => 'btn' %>
  <%= link_to "Delete Post", @post , :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
